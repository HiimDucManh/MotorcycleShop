<Window x:Class="FinalProject.View.Staffs.Pages.AddStaff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject.View.Staffs.Pages"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="AddStaff" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <TextBox x:Name="txtTenNV"
                             VerticalAlignment="Top"
                             Margin="30,50,30,0"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="HỌ VÀ TÊN"
                             materialDesign:HintAssist.HintOpacity="1"
                             Text="{Binding TENNV, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.Resources>
                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                        <Setter Property="FontWeight"
                                        Value="Bold" />
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Label Name="lbHoTen"
                           VerticalAlignment="Top"
                           Margin="30,90,30.2,0"
                           FontSize="10"
                           Foreground="Red"
                           FontStyle="Italic"
                           Content="{Binding lbHOTEN}" Height="4"></Label>

            <Label FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="30,0,30,150"
                           Foreground="Black">NGÀY SINH
            </Label>
            <DatePicker x:Name="txtNgaySinhNV"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Margin="30,0,30,100"
                                materialDesign:HintAssist.Hint="DAY/MONTH/YEAR"
                                materialDesign:CalendarAssist.IsHeaderVisible="False"
                                FontStyle="Italic"
                                SelectedDate="{Binding NGAYSINH, UpdateSourceTrigger=PropertyChanged}"
                                IsDropDownOpen="True"
                                Text="1/1/2001" />

            <TextBox x:Name="txtDiaChiNV"
                             VerticalAlignment="Center"
                             Margin="30,0,30,0"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="ĐỊA CHỈ"
                             materialDesign:HintAssist.HintOpacity="1"
                             Text="{Binding DIACHI, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.Resources>
                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                        <Setter Property="FontWeight"
                                        Value="Bold" />
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBox x:Name="txtTaiKhoanNV"
                             VerticalAlignment="Bottom"
                             Margin="30,0,29.667,111.667"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="TÀI KHOẢN"
                             materialDesign:HintAssist.HintOpacity="1"
                             Text="{Binding TAIKHOANNV, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.Resources>
                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                        <Setter Property="FontWeight"
                                        Value="Bold" />
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Label VerticalAlignment="Bottom"
                           Margin="30,0,30,30"
                           FontSize="10"
                           Foreground="Red"
                           FontStyle="Italic"
                           Content="{Binding lbTAIKHOAN}"></Label>

            <!--<PasswordBox x:Name="pwbPass"
                                 VerticalAlignment="Bottom"
                                 Margin="30,0,30,40"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox }"
                                 materialDesign:HintAssist.Hint="MẬT KHẨU"
                                 materialDesign:HintAssist.HintOpacity="1">
                        <PasswordBox.Resources>
                            <Style TargetType="{x:Type materialDesign:SmartHint}">
                                <Setter Property="FontWeight"
                                        Value="Bold" />
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>-->


        </Grid>

        <Grid Grid.Column="1">
            <Label x:Name="lbSex"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="30,0,30,150"
                           Foreground="Black">GIỚI TÍNH
            </Label>
            <ComboBox x:Name="cbSex"
                              VerticalAlignment="Center"
                              Margin="30,0,30,100"
                              SelectedIndex="0"
                              Text="{Binding GIOITINH, UpdateSourceTrigger=PropertyChanged}">
                <ComboBoxItem Content="Nam" />
                <ComboBoxItem Content="Nữ" />
                <ComboBoxItem Content="Khác" />
            </ComboBox>

            <TextBox x:Name="txtMaNV"
                             VerticalAlignment="Top"
                             Margin="30,50,30,0"
                             MaxLength="4"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="MÃ NHÂN VIÊN"
                             materialDesign:HintAssist.HintOpacity="1"
                             Text="{Binding MANV, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.Resources>
                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                        <Setter Property="FontWeight"
                                        Value="Bold" />
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Label VerticalAlignment="Top"
                           Margin="30,90,30,0"
                           FontSize="10"
                           Foreground="Red"
                           FontStyle="Italic"
                           Content="{Binding lbMANV}"></Label>

            <TextBox x:Name="txtSDTNV"
                             VerticalAlignment="Center"
                             Margin="30,0,30,0"
                             MaxLength="20"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="SỐ ĐIỆN THOẠI"
                             materialDesign:HintAssist.HintOpacity="1"
                             Text="{Binding SDT, UpdateSourceTrigger=PropertyChanged}"
                             PreviewTextInput="txtSDTNV_PreviewTextInput">
                <TextBox.Resources>
                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                        <Setter Property="FontWeight"
                                        Value="Bold" />
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBox x:Name="txtLuongNV"
                             VerticalAlignment="Center"
                             Margin="32,249,28.4,104"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="LƯƠNG"
                             materialDesign:HintAssist.HintOpacity="1"
                             PreviewTextInput="txtLuongNV_PreviewTextInput" Height="47">
                <TextBox.Resources>
                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                        <Setter Property="FontWeight"
                                        Value="Bold" />
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!--<PasswordBox x:Name="pwbRepass"
                                 VerticalAlignment="Bottom"
                                 Margin="30,0,30,40"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox }"
                                 materialDesign:HintAssist.Hint="NHẬP LẠI MẬT KHẨU"
                                 materialDesign:HintAssist.HintOpacity="1">
                        <PasswordBox.Resources>
                            <Style TargetType="{x:Type materialDesign:SmartHint}">
                                <Setter Property="FontWeight"                                       
                                        Value="Bold" />
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>-->
        </Grid>

        <Grid Grid.Column="2">
            <Button x:Name="btnImgNV"
                            VerticalAlignment="Top"
                            materialDesign:ButtonAssist.CornerRadius="20"
                            Width="170"
                            Height="230"
                            ToolTip="Avatar"
                            Margin="30,40,30,0"
                            Click="btnImgNV_Click">
                <Button.Background >
                    <ImageBrush x:Name="imgNV" />
                </Button.Background>
            </Button>


            <Button Style="{StaticResource MaterialDesignFlatAccentBgButton}"
                            materialDesign:ButtonAssist.CornerRadius="12"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Height="40"
                            Width="100"
                            Margin="20,20,10,40"
                    Content="Thêm"
                            Command="{Binding AddNVCommand}"
                            Click="Button_Click">

            </Button>
        </Grid>
    </Grid>
</Window>
