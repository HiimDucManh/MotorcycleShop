      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalProject.View.Customer"
      mc:Ignorable="d"      
      Title="HomePage" Loaded="Page_Loaded"
      Style="{DynamicResource Page_Style_BottomTop}">

    <Grid>
