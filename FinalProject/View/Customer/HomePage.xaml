        <Border Margin="0 0 0 100">
            <Border.Background>
                <ImageBrush ImageSource="/Assets/Avatars/Logo1.png"
                                        Stretch="Uniform"
                                        Opacity="0.2"/>
            </Border.Background>
        </Border>

        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--<TextBlock Grid.Column="0"
                       Text="Your next game"
                       FontSize="60"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryBlueTextColor}"
                       Margin="17 40"/>

            <TextBlock Grid.Column="0"
                       Text="starts now"
                       FontSize="60"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryBlueTextColor}"
                       Margin="10 90"/>-->

            <Image x:Name="imgframe"
                                Grid.Column="0"
                                Source="/Assets/Layout/StoryBoard/1.png"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom">
                <Image.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,1050,650" />
                </Image.Clip>
            </Image>

            <Grid Grid.Column="1" Margin="30 0">
                <StackPanel VerticalAlignment="Bottom">
                    <Button x:Name="btnBuy"
                            Width="130" Height="40"
                            HorizontalAlignment="Right" VerticalAlignment="Bottom"
                            Style="{DynamicResource MaterialDesignRaisedButton}"
                            Foreground="{DynamicResource PrimaryBackgroundColor}"                                               
                            Background="{DynamicResource PrimaryRedColor}"
                            BorderBrush="{x:Null}"
                            Content="Discover More"
                            Margin="0 30 60 40" 
                            Click="Button_Click"/>


                    <TextBlock Text="ducatiVietNam@gmail.com"
                               HorizontalAlignment="Right"
                               FontSize="13" FontWeight="Bold"/>
                    <TextBlock Text="941-135-5736"
                               HorizontalAlignment="Right"
                               FontSize="13" FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryRedColor}"/>

                    <TextBlock Text="Website:"
                               HorizontalAlignment="Right"
                               FontSize="13" FontWeight="Bold"
                               Margin="0 20 0 0"/>
                    <TextBlock Text="ducativietnam.com"
                               HorizontalAlignment="Right"
                               FontSize="13" FontWeight="Bold"
                               Margin="0 0 0 30"
                               Foreground="{DynamicResource PrimaryRedColor}"/>
                </StackPanel>
            </Grid>
        </Grid>
        
        

        

    </Grid>
